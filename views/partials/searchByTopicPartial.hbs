<div class="homePageBlock">
    <div class="searchByTopicContainer">
        <div class="searchByTopicTitle">
            Search By Topic
        </div>
        <div class="dropDownContainer">
            <form action="/searchByTopic" method="POST">
                <select name="topic" id="searchTopicDropDown">
                    {{#each topics}}
                        <option value={{this.ID}}>{{this.TOPIC}}</option>
                    {{/each}}
                </select>
                <input type="submit" class="regularButton" value="Go">
            </form>
        </div>
    </div>
    <div class="latestDiscussionsTitle">
        Latest Discussions
    </div>
</div>